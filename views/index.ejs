<main class="pagina-inicial">
  <section class="destaque">
    <h1>Destaque</h1>

    <% if (destaque) { %>
      <div class="destaque-banner" data-id="<%= destaque._id %>">
        <img src="<%= destaque.capa_url %>" alt="<%= destaque.titulo %>">
        <div class="info-destaque">
          <h2><%= destaque.titulo %></h2>
          <p id="destaque-autor">Escrito por: <i><%= destaque.id_autor.nome %></i></p>
          <p id="destaque-usuario">@<%= destaque.id_autor.usuario %></p>
          <p id="destaque-resumo"><%= destaque.resumo.slice(0, 250) %><% if (destaque.resumo.length > 250) { %>...<% } %></p>
          <p id="destaque-genero"><%= destaque.genero.join('; ') %></p>
        </div>
      </div>
    <% } %>
  </section>

  <% categorias.forEach(function(categoria) { %>
    <section class="categoria">
      <h2><%= categoria.nome %></h2>
      <div class="carrossel">
        <% categoria.historias.forEach(function(historia) { %>
          <div class="card-historia" data-id="<%= historia._id %>">
            <div class="card-img">
              <img src="<%= historia.capa_url %>" alt="<%= historia.titulo %>">
            </div>
            <div class="info-card">
              <h3 class="info-card-titulo"><%= historia.titulo %></h3>
              <p class="info-card-usuario">@<%= historia.id_autor.usuario %></p>
              <p class="info-card-resumo"><%= historia.resumo.slice(0, 75) %><% if (historia.resumo.length > 75) { %>...<% } %></p>
              <p class="info-card-status"><%= historia.status %></p>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  <% }) %>
</main>

<script src="/javascripts/feed.js"></script>